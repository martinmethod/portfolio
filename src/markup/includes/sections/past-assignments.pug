mixin assignments(data)
  each stage, assigner in data.content
    .stage
      p.label #{stage.period.start} â€” #{stage.period.end}
      .info
        dl.meta.cf
          dt.light Employer:
          dd.dark
            span #{stage.employer}
          dt.light Technologies & environment:
          dd.dark
            each meta in stage.meta
              span #{meta};
              | &nbsp;
      ul.items
        each item, index in projects
          if (item.category === 'assignments') && (item.assigner === assigner)
            li.item
              header.bullet.cf
                +projectLine(item, index)
